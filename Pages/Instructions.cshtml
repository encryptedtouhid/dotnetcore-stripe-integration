@page
@model StripeIntegration.Pages.InstructionsModel
@{
    ViewData["Title"] = "Instructions";
}

<div class="container mt-4">
    <h1>How to Use the Stripe Integration</h1>
    
    <div class="card mb-4">
        <div class="card-header">
            <h3>Testing the Payment Flow</h3>
        </div>
        <div class="card-body">
            <h4>Test Card Numbers</h4>
            <ul>
                <li><strong>Successful Payment:</strong> 4242 4242 4242 4242</li>
                <li><strong>Requires Authentication:</strong> 4000 0025 0000 3155</li>
                <li><strong>Declined Payment:</strong> 4000 0000 0000 0002</li>
            </ul>

            <h4>Test Card Details</h4>
            <ul>
                <li><strong>Expiry Date:</strong> Any future date (e.g., 12/25)</li>
                <li><strong>CVC:</strong> Any 3 digits</li>
                <li><strong>ZIP:</strong> Any 5 digits</li>
            </ul>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-header">
            <h3>Step-by-Step Guide</h3>
        </div>
        <div class="card-body">
            <ol>
                <li>Go to the <a href="/Checkout">Checkout page</a></li>
                <li>Enter one of the test card numbers above</li>
                <li>Complete the payment form with test details</li>
                <li>Submit the payment to see the result</li>
                <li>You will be redirected to the confirmation page on success</li>
            </ol>
        </div>
    </div>

    <div class="alert alert-info">
        <strong>Note:</strong> This is a test implementation. In a production environment, real cards will be processed and charged.
    </div>
</div>