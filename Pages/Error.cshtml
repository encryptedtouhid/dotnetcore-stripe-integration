@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="max-w-2xl mx-auto bg-white p-8 rounded-lg shadow-md text-center">
    <div class="mb-6">
        <svg class="mx-auto h-12 w-12 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
        </svg>
    </div>
    
    <h1 class="text-2xl font-bold text-gray-800 mb-4">Error</h1>
    
    @if (Model.ShowRequestId)
    {
        <p class="text-gray-600 mb-2">Request ID: <code class="bg-gray-100 px-2 py-1 rounded">@Model.RequestId</code></p>
    }

    <div class="mt-6">
        <h2 class="text-xl font-semibold text-gray-800 mb-4">An error occurred while processing your request.</h2>
        <p class="text-gray-600">
            Please try again later or contact support if the problem persists.
        </p>
    </div>

    <div class="mt-8">
        <a href="/" class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Return Home
        </a>
    </div>
</div>

@if (Model.ShowRequestId)
{
    <div class="max-w-2xl mx-auto mt-8">
        <div class="bg-gray-50 rounded-md p-4">
            <h3 class="text-lg font-medium text-gray-800 mb-2">Development Mode</h3>
            <p class="text-gray-600">
                Swapping to the <strong>Development</strong> environment will display more detailed information about the error that occurred.
            </p>
        </div>
    </div>
}
