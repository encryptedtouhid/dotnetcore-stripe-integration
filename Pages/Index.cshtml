@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="max-w-4xl mx-auto">
    <div class="text-center">
        <h1 class="text-4xl font-bold text-gray-900 mb-8">Welcome to Stripe Integration Demo</h1>
        <p class="text-xl text-gray-600 mb-12">This is a demonstration of Stripe payment integration with ASP.NET Core.</p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="bg-white p-8 rounded-lg shadow-md">
                <h2 class="text-2xl font-semibold text-gray-800 mb-4">Try the Demo</h2>
                <p class="text-gray-600 mb-6">Experience the payment flow using Stripe's test payment system.</p>
                <a href="/Checkout" class="inline-flex items-center px-6 py-3 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Go to Checkout
                </a>
            </div>
            
            <div class="bg-white p-8 rounded-lg shadow-md">
                <h2 class="text-2xl font-semibold text-gray-800 mb-4">Setup Guide</h2>
                <p class="text-gray-600 mb-6">Learn how to set up Stripe integration in your own project.</p>
                <a href="/Instructions" class="inline-flex items-center px-6 py-3 border border-transparent rounded-md shadow-sm text-base font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    View Instructions
                </a>
            </div>
        </div>
        
        <div class="mt-12 bg-white p-8 rounded-lg shadow-md">
            <h2 class="text-2xl font-semibold text-gray-800 mb-4">Features</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="p-4">
                    <h3 class="text-lg font-medium text-gray-900 mb-2">Secure Payments</h3>
                    <p class="text-gray-600">Process payments securely using Stripe's trusted platform</p>
                </div>
                <div class="p-4">
                    <h3 class="text-lg font-medium text-gray-900 mb-2">Easy Integration</h3>
                    <p class="text-gray-600">Simple setup process with detailed documentation</p>
                </div>
                <div class="p-4">
                    <h3 class="text-lg font-medium text-gray-900 mb-2">Modern UI</h3>
                    <p class="text-gray-600">Clean and responsive design using Tailwind CSS</p>
                </div>
            </div>
        </div>
    </div>
</div>
